#!/usr/bin/env bash

# Use ipython for driver.
PYSPARK_DRIVER_PYTHON=ipython

# So that links work properly in Spark admin.
SPARK_PUBLIC_DNS={{ spark_public_dns }}

# AWS credentials.
AWS_ACCESS_KEY_ID={{ aws_access_key_id_spark }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key_spark }}

# Avoid too-many-open-files errors.
ulimit -n {{ spark_max_files - 1 }}

# Use common hash seed across nodes (needed for reduceByKey).
PYTHONHASHSEED=1
